<tr id="articleRow_<%= article.id %>">
  <td><%= article.title %></td>
  <td><%= article.description %></td>
  <td><%= link_to 'Show', article, data: { toggle: "modal", target: "#showArticleModel", remote: true }  %></td>
  <td><%= link_to 'Edit', edit_article_path(article), data: { toggle: "modal", target: "#editArticleModel", remote: true }  %></td>
  <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?', remote: true } %></td>
</tr>