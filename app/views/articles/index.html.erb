<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-md-auto">
      <h1>All Article listing</h1>
      <%= link_to 'New Article', new_article_path, class: "btn btn-primary btn-lg mb-4",
                  data: { toggle: "modal", target: "#articleModel", remote: true } %>

      <table class="table table-bordered">
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Contact</th>
          <th colspan="3">Operations</th>
        </tr>
        </thead>

        <tbody id="articleTable">
        <% @articles.each do |article| %>
          <%= render 'article_row', article: article %>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>


  </div>


</div>

<div class="modal fade" id="articleModel" tabindex="-1" aria-labelledby="articleModelLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="articleModelLabel">Create New article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="newArticleForm">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editArticleModel" tabindex="-1" aria-labelledby="editArticleModelLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editArticleModelLabel">Edit Article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="editArticleForm">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="showArticleModel" tabindex="-1" aria-labelledby="showArticleModelLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showArticleModelLabel">Show Article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="showArticleDetails">
      </div>
    </div>
  </div>
</div>